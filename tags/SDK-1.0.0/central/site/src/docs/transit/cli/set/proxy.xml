<document>

  <properties>
    <author email="mcconnell@dpml.net">Stephen McConnell</author>
    <title>DPML Transit Set Proxy Command</title>
  </properties> 

  <body>

    <section name="Set Proxy Command">

      <subsection name="Description">

        <p>
        Modify the proxy configuration.
        </p>

      </subsection>

      <subsection name="Commandline">

<pre><![CDATA[$ transit set proxy 
  [-url <proxy-host>]
  [-username <username>]
  [-password <password>]
  [-excludes <pattern>[,<pattern>,...]]
]]></pre>

      </subsection>

      <subsection name="Options">

        <table>
          <tr><td>url</td><td>Proxy host url.</td></tr>
          <tr><td>username</td><td>Proxy host login username.</td></tr>
          <tr><td>password</td><td>Proxy host password.</td></tr>
          <tr><td>excludes</td><td>Comma separated sequence of host explusion patterns.</td></tr>
        </table>

      </subsection>

    </section>

  </body>

</document>

