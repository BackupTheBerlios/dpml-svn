<project name="dpml-http-demo" default="install" basedir="." 
    xmlns:transit="antlib:net.dpml.transit" 
    xmlns:x="plugin:dpml/magic/dpml-magic-core"
    xmlns:c="plugin:dpml/composition/dpml-composition-builder">

  <transit:import uri="artifact:template:dpml/magic/standard"/>

  <target name="build" depends="standard.build">
    <x:property name="http.uri" key="dpml-http-impl" feature="uri" type="part"/>
    <c:type class="net.dpml.http.Demo" threadsafe="true"/>
    <c:component name="demo" type="net.dpml.http.Demo" extends="${http.uri}">
      <context>
        <entry key="httpHandler" uri="service:net.dpml.http.spi.FileResourceHandler"/>
        <entry key="socketListener" uri="service:net.dpml.http.spi.SocketListenerService"/>
      </context>
    </c:component>
  </target>

  <target name="package" depends="standard.package">
    <mkdir dir="target/test"/>
    <copy file="target/deliverables/parts/${project.filename}" toFile="target/test/demo.part"/>
  </target>

  <target name="install" depends="standard.install">
    <x:property name="part.uri" feature="uri" type="part"/>
    <property name="link" value="target/deliverables/parts/${project.name}-LATEST.part.link"/>
    <echo file="${link}">${part.uri}</echo>
  </target>

</project>

