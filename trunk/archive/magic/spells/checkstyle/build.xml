<project name="dpml-magic-checkstyle" default="install" basedir="."
    xmlns:transit="antlib:net.dpml.transit" xmlns:x="plugin:dpml/magic/dpml-magic-core" >

  <transit:import uri="local:template:magic/standard"/>

  <target name="package" depends="standard.package">
    <x:export class="net.dpml.magic.checkstyle.CheckstyleTask"/>
  </target>

  <target name="install" depends="standard.install">
    <property name="formats" value="${dpml.prefs}/magic/formats"/>
    <mkdir dir="${formats}"/>
    <copy toDir="${formats}">
      <fileset dir="target/formats"/>
    </copy>
    <property name="xsls" value="${dpml.prefs}/magic/xsls"/>
    <mkdir dir="${xsls}"/>
    <copy toDir="${xsls}">
      <fileset dir="target/xsls"/>
    </copy>
  </target>

</project>
