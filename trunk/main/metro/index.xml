<?xml version="1.0" encoding="ISO-8859-1"?>

<index key="dpml-metro">

  <import uri="${dpml.transit.uri}"/>
  <import uri="${dpml.magic.uri}"/>

  <!-- module -->

  <project file="module.xml">
    <info>
      <group>dpml/metro</group>
      <name>dpml-metro</name>
      <types>
        <type name="module" alias=""/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit"/>
      <include key="dpml-magic"/>
    </dependencies>
  </project>

  <!-- Logging -->

  <project basedir="logging">
    <info>
      <group>dpml/metro</group>
      <name>dpml-logging-api</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </project>

  <!-- Part -->

  <project basedir="part">
    <info>
      <group>dpml/metro</group>
      <name>dpml-part-api</name>
      <types>
        <type name="jar"/>
        <type name="plugin" alias=""/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit-main"/>
    </dependencies>
  </project>

  <!-- State -->

  <project basedir="state/api">
    <info>
      <group>dpml/metro</group>
      <name>dpml-state-api</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit-main"/>
    </dependencies>
  </project>

  <project basedir="state/impl">
    <info>
      <group>dpml/metro</group>
      <name>dpml-state-impl</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-state-api"/>
      <include key="dpml-configuration-impl"/>
    </dependencies>
  </project>

  <!-- Component -->

  <project basedir="component">
    <info>
      <group>dpml/metro</group>
      <name>dpml-component-api</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-state-api"/>
      <include key="dpml-part-api"/>
    </dependencies>
  </project>

  <!-- Activity -->

  <project basedir="activity">
    <info>
      <group>dpml/metro</group>
      <name>dpml-activity-api</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </project>

  <!-- Configuration -->

  <project basedir="configuration/api">
    <info>
      <group>dpml/metro</group>
      <name>dpml-configuration-api</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </project>

  <project basedir="configuration/impl">
    <info>
      <group>dpml/metro</group>
      <name>dpml-configuration-impl</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-configuration-api"/>
      <!--<include key="xercesImpl" runtime="true" build="true" />-->
    </dependencies>
  </project>

  <!-- Parameters -->

  <project basedir="parameters/api">
    <info>
      <group>dpml/metro</group>
      <name>dpml-parameters-api</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </project>

  <project basedir="parameters/impl">
    <info>
      <group>dpml/metro</group>
      <name>dpml-parameters-impl</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-parameters-api"/>
      <include key="dpml-configuration-api"/>
    </dependencies>
  </project>

  <!-- Composition Model -->

  <project basedir="composition/model">
    <info>
      <group>dpml/metro</group>
      <name>dpml-composition-model</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit-main"/>
      <include key="dpml-state-api"/>
      <include key="dpml-state-impl" runtime="false"/>
      <include key="dpml-parameters-api"/>
      <include key="dpml-configuration-api"/>
      <include key="dpml-component-api"/>
    </dependencies>
  </project>

  <!-- Composition Management -->

  <project basedir="composition/editor">
    <info>
      <group>dpml/metro</group>
      <name>dpml-composition-editor</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-composition-model"/>
      <include key="forms"/>
    </dependencies>
  </project>

  <!-- Composition Runtime -->

  <project basedir="composition/control">
    <info>
      <group>dpml/metro</group>
      <name>dpml-composition-control</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-component-api" tag="api"/>
      <include key="dpml-transit-main" tag="api"/>
      <include key="dpml-logging-api" tag="spi"/>
      <include key="dpml-activity-api" tag="spi"/>
      <include key="dpml-parameters-api" tag="spi"/>
      <include key="dpml-configuration-api" tag="spi"/>
      <include key="dpml-composition-model"/>
      <include key="dpml-parameters-impl"/>
      <include key="dpml-configuration-impl"/>
      <include key="dpml-state-impl"/>
    </dependencies>
  </project>

  <project basedir="composition/builder">
    <info>
      <group>dpml/metro</group>
      <name>dpml-composition-builder</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-magic-core"/>
      <include key="dpml-composition-control"/>
      <include key="xstream"/>
    </dependencies>
  </project>

  <project basedir="composition/test">
    <info>
      <name>dpml-composition-test</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-logging-api"/>
      <include key="ant-junit" runtime="false"/>
      <include key="dpml-composition-model" runtime="false"/>
      <include key="dpml-composition-builder" build="false"/>
    </dependencies>
    <plugins>
      <include key="dpml-composition-builder"/>
    </plugins>
  </project>

  <project basedir="central">
    <info>
      <group>dpml/metro</group>
      <name>dpml-metro-central</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-component-api"/>
    </dependencies>
  </project>

  <!-- EXTERNAL RESOURCES -->

  <!--
  <resource>
    <info>
      <group>xerces</group>
      <name>xercesImpl</name>
      <version>2.6.2</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="xmlParserAPIs" />
    </dependencies>
  </resource>

  <resource>
    <info>
      <group>xerces</group>
      <name>xmlParserAPIs</name>
      <version>2.6.2</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>
  -->

  <resource>
    <info>
      <group>xstream</group>
      <name>xstream</name>
      <version>1.1</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>

  <resource>
    <info>
      <group>jgoodies</group>
      <name>looks</name>
      <version>1.3.1</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>

  <resource>
    <info>
      <group>jgoodies</group>
      <name>forms</name>
      <version>1.0.5</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="looks" />
    </dependencies>
  </resource>

</index>
