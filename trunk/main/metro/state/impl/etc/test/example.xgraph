<?xml version="1.0" encoding="UTF-8" ?>

<state>
  <trigger event="initialization">
    <transition name="init" target="available/started" handler="method:start"/>
  </trigger>
  <state name="available">
   <operation name="audit" handler="method:audit"/>
   <trigger event="termination">
     <transition name="terminate" target="../terminated"/>
   </trigger>
    <state name="started">
      <transition name="stop" target="../stopped" handler="method:stop"/>
      <trigger event="termination">
        <action uri="transition:stop"/>
      </trigger>
    </state>
    <state name="stopped">
      <transition name="start" target="../started" handler="method:start"/>
    </state>
  </state>
  <state name="terminated" terminal="true"/>
</state>

