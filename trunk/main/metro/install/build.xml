<?xml version="1.0" encoding="UTF-8" ?>

<project name="dpml-metro-install" default="install" basedir="." 
    xmlns:transit="antlib:net.dpml.transit" xmlns:x="dpml:depot" >

  <transit:import uri="local:template:dpml/tools/standard"/>

  <target name="init" depends="standard.init">
    <x:property name="part.name" feature="name" key="dpml-metro-component"/>
    <x:property name="part.version" feature="version" key="dpml-metro-component"/>
    <x:property name="part.group" feature="group" key="dpml-metro-component"/>
    <x:property name="part.uri" feature="uri" type="plugin" key="dpml-metro-component"/>
    <filter token="PRODUCTION_URI" value="${part.uri}"/>
  </target>

  <!--
  <target name="package" depends="standard.package">
    <x:export class="net.dpml.metro.install.MetroInstaller"/>
  </target>
  -->

</project>
