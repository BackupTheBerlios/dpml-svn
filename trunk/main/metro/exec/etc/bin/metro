#!/bin/sh
#

METRO_JVM_OPTS="-Ddpml.depot.application=dpml.metro -Ddpml.logging.config=local:properties:dpml/transit/default"

if [ "$DEPOT_JVM_OPTS" = "" ] ; then
    DEPOT_JVM_OPTS=$METRO_JVM_OPTS
else
    DEPOT_JVM_OPTS="$METRO_JVM_OPTS $DEPOT_JVM_OPTS"
fi
export DEPOT_JVM_OPTS

depot $*
