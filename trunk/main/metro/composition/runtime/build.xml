<?xml version="1.0" encoding="UTF-8" ?>

<project name="dpml-composition-runtime" default="install" basedir="."
    xmlns:transit="antlib:net.dpml.transit" xmlns:x="plugin:dpml/magic/dpml-magic-core" >

  <transit:import uri="local:template:magic/standard"/>

  <target name="init" depends="standard.init">
    <x:filter token="PART-BUILDER-URI" key="dpml-composition-builder" type="plugin" feature="uri"/>
    <x:filter token="PART-HANDLER-URI" type="plugin" feature="uri"/>
    <x:filter token="PART-EDITOR-FACTORY-URI" key="dpml-composition-editor" type="plugin" feature="uri"/>
  </target>

  <target name="build" depends="standard.build">
    <x:path id="build.path"/>
    <rmic base="${basedir}/target/classes" classpathref="build.path">
      <include name="**/engine/DefaultComponentModel.class"/>
      <include name="**/engine/DefaultContextModel.class"/>
      <!--<include name="**/engine/ComponentController.class"/>-->
      <include name="**/engine/ComponentHandler.class"/>
      <include name="**/engine/DefaultInstance.class"/>
      <include name="**/runtime/ComponentHandler.class"/>
      <include name="**/runtime/CompositionHandler.class"/>
      <include name="**/runtime/ValueHandler.class"/>
    </rmic>
  </target>

  <target name="package" depends="standard.package">
    <x:export class="net.dpml.composition.control.CompositionController"/>
  </target>

</project>
