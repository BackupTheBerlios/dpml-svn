<?xml version="1.0" encoding="ISO-8859-1"?>

<index key="dpml-tools">

  <import uri="${dpml.transit.uri}"/>
  <import uri="${dpml.magic.uri}"/>

  <project file="module.xml">
    <info>
      <group>dpml/tools</group>
      <name>dpml-tools</name>
      <types>
        <type name="module" alias=""/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit"/>
    </dependencies>
  </project>

  <project basedir="model">
    <info>
      <group>dpml/tools</group>
      <name>dpml-tools-model</name>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit-main"/>
      <include key="ant-junit" runtime="false"/>
    </dependencies>
  </project>

  <project basedir="control">
    <info>
      <group>dpml/tools</group>
      <name>dpml-tools-control</name>
      <types>
        <type name="jar"/>
        <type name="plugin" alias=""/>
      </types>
    </info>
    <dependencies>
      <include key="commons-cli"/>
      <include key="dpml-tools-model"/>
      <include key="ant-junit" runtime="false"/>
      <!-- issue with system -->
      <include key="ant" tag="system"/>
      <include key="ant-launcher" tag="system"/>
      <include key="ant-junit" tag="system"/>
      <include key="junit" tag="system"/>
    </dependencies>
  </project>

  <project basedir="ant">
    <info>
      <group>dpml/tools</group>
      <name>dpml-tools-ant</name>
      <types>
        <type name="jar"/>
        <type name="plugin" alias=""/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit-main"/>
      <include key="dpml-transit-tools"/>
      <include key="ant" tag="system"/>
      <include key="ant-launcher" tag="system"/>
      <include key="ant-junit" tag="system"/>
      <include key="junit" tag="system"/>
      <include key="dpml-tools-control"/>
    </dependencies>
  </project>

  <resource>
    <info>
      <group>commons-cli</group>
      <name>commons-cli</name>
      <version>1.0</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>

</index>
