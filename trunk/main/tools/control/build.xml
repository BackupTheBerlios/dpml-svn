<?xml version="1.0" encoding="UTF-8" ?>

<project name="dpml-tools-control" default="install" basedir="."
    xmlns:transit="antlib:net.dpml.transit" xmlns:x="plugin:dpml/magic/dpml-magic-core" >

  <transit:import uri="local:template:magic/standard"/>

  <target name="init" depends="standard.init">
    <x:filter feature="uri" type="plugin" key="dpml-tools-ant" token="ANT-BUILDER-URI"/>
  </target>

  <target name="build" depends="standard.build">
    <x:path id="build.path"/>
    <rmic base="${basedir}/target/classes" classpathref="build.path">
      <include name="**/DefaultLibrary.class"/>
      <include name="**/DefaultModule.class"/>
      <include name="**/DefaultProject.class"/>
      <include name="**/DefaultResource.class"/>
    </rmic>
  </target>

  <target name="package" depends="standard.package">
    <x:export class="net.dpml.tools.control.BuildPlugin"/>
  </target>

</project>
