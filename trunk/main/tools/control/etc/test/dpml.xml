<?xml version="1.0" encoding="ISO-8859-1"?>

<module name="dpml" basedir=".">

   <properties>
     <property name="publisher.name" value="Digital Product Meta Library"/>
     <property name="publisher.url" value="http://www.dpml.net"/>
     <property name="resource.repository.host" value="http://repository.dpml.net/"/>
     <property name="javadoc.repository.host" value="http://api.dpml.net/"/>
     <property name="build.template" value="${dpml.library.basedir}/standard.template"/>
   </properties>

   <module name="runtime">
     <projects>
       <project name="dpml-transit-main" basedir="transit/core/handler">
         <production>
           <artifact type="jar"/>
         </production>
       </project>
       <project name="dpml-state-api" basedir="metro/state/api">
         <production>
           <artifact type="jar"/>
         </production>
         <dependencies scope="runtime">
           <include ref="dpml/runtime/dpml-transit-main"/>
         </dependencies>
       </project>
       <project name="dpml-state-impl" basedir="metro/state/impl">
         <production>
           <artifact type="jar"/>
           <artifact type="plugin"/>
         </production>
         <dependencies scope="runtime">
           <include key="dpml-state-api"/>
         </dependencies>
       </project>
     </projects>
   </module>

   <module name="tools">
     <dependencies>
       <include file="ant.xml"/>
     </dependencies>
     <projects>
       <project name="dpml-transit-tools" basedir="transit/core/tools">
         <production>
           <artifact type="jar"/>
         </production>
         <dependencies scope="runtime">
           <include ref="dpml/runtime/dpml-transit-main"/>
           <include ref="ant/ant"/>
         </dependencies>
       </project>
     </projects>
   </module>

   <module name="management"/>

</module>
