  <types>
    <type id="module" alias="true"/>
  </types>
   
  <dependencies scope="build">
    <include key="tools"/>
  </dependencies>
    
  <project name="dpml-depot-console" basedir="console">
    <types>
      <type id="jar"/>
    </types>
    <properties>
      <property name="project.jar.main.class" value="net.dpml.depot.Main"/>
    </properties>
    <dependencies>
      <include ref="dpml/transit/dpml-transit-main"/>
    </dependencies>
    <dependencies scope="test">
      <include ref="ant/ant-junit"/>
    </dependencies>
  </project>

  <project name="dpml-profile-api" basedir="profile/api">
    <types>
      <type id="jar"/>
    </types>
    <dependencies>
      <include ref="dpml/transit/dpml-transit-main"/>
    </dependencies>
    <dependencies scope="test">
      <include ref="junit/junit"/>
    </dependencies>
  </project>
  
  <project name="dpml-profile-impl" basedir="profile/impl">
    <types>
      <type id="jar"/>
      <type id="plugin" alias="true">
        <property name="project.plugin.class" 
          value="net.dpml.profile.impl.RemoteApplicationRegistry"/>
      </type>
    </types>
    <dependencies>
      <include ref="dpml/transit/dpml-transit-main"/>
      <include key="dpml-profile-api"/>
    </dependencies>
    <dependencies scope="test">
      <include ref="junit/junit"/>
    </dependencies>
  </project>

