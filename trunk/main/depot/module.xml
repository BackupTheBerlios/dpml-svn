  <project name="dpml-depot-exec" basedir="exec">
    <types>
      <type id="jar"/>
      <type id="plugin">
        <property name="project.plugin.class" 
           value="net.dpml.depot.exec.ApplicationHandler"/>
      </type>
    </types>
    <dependencies scope="build">
      <include ref="dpml/metro/dpml-composition-runtime"/>
    </dependencies>
    <dependencies>
      <include ref="dpml/util/dpml-util-cli"/>
      <include ref="dpml/transit/dpml-transit-main"/>
      <include ref="dpml/metro/dpml-component-control"/>
      <include ref="dpml/metro/dpml-part-api"/>
      <include key="dpml-profile-api"/>
      <include key="dpml-station-api"/>
    </dependencies>
  </project>
   
  <project name="dpml-station-api" basedir="station/api">
    <types>
      <type id="jar"/>
    </types>
    <dependencies>
      <include ref="dpml/metro/dpml-part-api"/>
      <include key="dpml-depot-console"/>
      <include key="dpml-profile-api"/>
    </dependencies>
  </project>
   
  <project name="dpml-station-impl" basedir="station/impl">
    <types>
      <type id="jar"/>
      <type id="plugin">
        <property name="project.plugin.class" 
           value="net.dpml.station.server.StationServerPlugin"/>
      </type>
    </types>
    <dependencies>
      <include ref="dpml/util/dpml-util-cli"/>
      <include ref="dpml/transit/dpml-transit-main"/>
      <include ref="dpml/metro/dpml-part-api"/>
      <include key="dpml-profile-api"/>
      <include key="dpml-profile-impl"/>
      <include key="dpml-station-api"/>
    </dependencies>
  </project>

  <project name="dpml-station-console" basedir="station/console">
    <types>
      <type id="jar"/>
      <type id="plugin" alias="true">
        <property name="project.plugin.class" 
           value="net.dpml.station.console.StationPlugin"/>
      </type>
    </types>
    <dependencies>
      <include ref="dpml/util/dpml-util-cli"/>
      <include key="dpml-station-api"/>
      <include key="dpml-station-impl"/>
      <include key="dpml-profile-api"/>
    </dependencies>
  </project>
   
  <project name="dpml-depot-install" basedir="install">
    <types>
      <type id="jar"/>
