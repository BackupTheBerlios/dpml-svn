<?xml version="1.0" encoding="ISO-8859-1"?>

<module name="depot">
   
  <types>
    <type id="module" alias="true"/>
  </types>
   
  <dependencies scope="build">
    <include key="tools"/>
  </dependencies>
    
  <project name="dpml-depot-console" basedir="console">
    <types>
      <type id="jar"/>
    </types>
    <properties>
      <property name="project.jar.main.class" value="net.dpml.depot.Main"/>
    </properties>
    <dependencies>
      <include ref="dpml/transit/dpml-transit-main"/>
    </dependencies>
    <dependencies scope="test">
      <include ref="ant/ant-junit"/>
    </dependencies>
  </project>

  <project name="dpml-depot-builder" basedir="builder">
    <types>
      <type id="jar"/>
      <type id="plugin" alias="true">
        <property name="project.plugin.class" 
           value="net.dpml.depot.builder.BuilderPlugin"/>
      </type>
    </types>
    <dependencies>
      <include ref="dpml/util/dpml-util-cli"/>
      <include ref="dpml/transit/dpml-transit-main"/>
      <include ref="dpml/tools/dpml-tools-library"/>
    </dependencies>
    <dependencies scope="test">
      <include ref="ant/ant-junit"/>
    </dependencies>
  </project>

  <project name="dpml-station-api" basedir="station/api">
    <types>
      <type id="jar"/>
    </types>
    <dependencies>
      <include ref="dpml/transit/dpml-transit-main"/>
      <include ref="dpml/metro/dpml-part-api"/>
      <include key="dpml-depot-console"/>
    </dependencies>
    <dependencies scope="test">
      <include ref="junit/junit"/>
    </dependencies>
  </project>
   
  <project name="dpml-station-server" basedir="station/server">
    <types>
      <type id="jar"/>
      <type id="plugin">
        <property name="project.plugin.class" 
           value="net.dpml.station.server.StationServerPlugin"/>
      </type>
    </types>
    <dependencies>
      <include ref="dpml/transit/dpml-transit-main"/>
      <include ref="dpml/util/dpml-util-cli"/>
      <include ref="dpml/metro/dpml-part-api"/>
      <include key="dpml-station-api"/>
    </dependencies>
    <dependencies scope="test">
      <include ref="junit/junit"/>
    </dependencies>
  </project>

  <project name="dpml-station-console" basedir="station/console">
    <types>
      <type id="jar"/>
      <type id="plugin" alias="true">
        <property name="project.plugin.class" 
           value="net.dpml.station.console.StationPlugin"/>
      </type>
    </types>
    <dependencies>
      <include ref="dpml/util/dpml-util-cli"/>
      <include key="dpml-station-api"/>
      <include key="dpml-station-server"/>
    </dependencies>
  </project>
   
