<?xml version="1.0" encoding="UTF-8" ?>

<project name="dpml-depot-exec" default="install" basedir="." 
    xmlns:transit="antlib:net.dpml.transit" 
    xmlns:x="dpml:tools" >

  <transit:import uri="local:template:tools/standard"/>

  <target name="init" depends="standard.init">
    <x:filter token="DEPOT-PROFILE-PLUGIN-URI" key="dpml-profile-impl" feature="uri" type="plugin"/>
    <x:filter feature="uri" type="plugin" token="COMPOSITION-CONTROLLER-URI" 
      ref="dpml/metro/dpml-metro-runtime"/>
  </target>

  <target name="build" depends="standard.build">
    <rmic base="${project.target.classes.main.dir}" classpathref="project.compile.path">
      <include name="**/AbstractHandler.class"/>
    </rmic>
  </target>

</project>
