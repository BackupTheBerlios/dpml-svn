  <body>

    <section name="Set Layout Command">

      <subsection name="Description">

        <p>
        Updates the defintion of a custom layout scheme.
        </p>

      </subsection>

      <subsection name="Commandline">

<pre><![CDATA[$ transit set layout <id>
  [-uri <uri>]
  [-title <title>]
]]></pre>

      </subsection>

      <subsection name="Options">

        <table>
          <tr><td>uri</td><td>Updates the plugin uri.</td></tr>
          <tr><td>title</td><td>Update the layout strategy title.</td></tr>
        </table>

      </subsection>

    </section>


  </body>

