<?xml version="1.0" encoding="UTF-8" ?>

<state>
  <trigger event="initialization">
    <transition name="init" target="started" uri="method:start"/>
  </trigger>
  <state name="started">
    <transition name="stop" target="../stopped" uri="method:stop"/>
    <trigger event="termination">
      <action uri="transition:stop"/>
    </trigger>
  </state>
  <state name="stopped">
    <transition name="start" target="../started" uri="method:start"/>
  </state>
</state>

