<project name="dpml-main" default="transit" basedir=".">

  <property file="${basedir}/user.properties"/>
  <property file="${basedir}/build.properties"/>
  <property name="junitHtmlReportDir" value="target/reports/junit"/>

  <target name="transit"
     description="Build the Transit distribution and update the local installation">
    <ant dir="transit"/>
  </target>

  <target name="magic" description="Build magic (requires Transit).">
    <ant dir="magic"/>
  </target>

  <target name="tools" description="Build Util (requires Magic).">
    <ant dir="tools"/>
  </target>

  <target name="util" description="Build Util (requires Magic).">
    <ant dir="util"/>
  </target>

  <target name="depot" description="Build Depot (requires Magic).">
    <ant dir="depot"/>
  </target>

  <target name="metro" description="Build Metro (requires Magic).">
    <ant dir="metro"/>
  </target>

  <target name="test" description="Build Integration Tests (requires Metro).">
    <ant dir="test"/>
  </target>

  <target name="clean" description="Clean all subprojects.">
    <delete includeemptydirs="true">
      <fileset dir=".">
        <include name="**/target/**/**"/>
      </fileset>
    </delete>
  </target>

  <target name="junit-report">
    <echo>${junitHtmlReportDir}</echo>
    <mkdir dir="${junitHtmlReportDir}"/>
    <junitreport todir="${junitHtmlReportDir}">
      <fileset dir=".">
        <include name="**/target/test-reports/TEST-*.xml"/>
      </fileset>
      <report format="frames" todir="${junitHtmlReportDir}" styledir="magic/core/etc/xsls"/>
    </junitreport>
  </target>

</project>
