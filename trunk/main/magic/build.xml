<project name="dpml-magic" basedir="." default="install">

  <target name="install" depends="module"/>

  <target name="module" depends="spells">
    <ant dir="${basedir}" antfile="module.xml" inheritall="false"/>
  </target>

  <target name="spells" depends="core">
    <ant dir="spells" inheritall="false"/>
  </target>

  <target name="core">
    <ant dir="core" inheritall="false"/>
  </target>

  <target name="clean">
    <delete quiet="true" dir="target"/>
    <delete quiet="true" dir="core/target"/>
    <delete quiet="true" dir="spells/bar/target"/>
    <delete quiet="true" dir="spells/doc/target"/>
    <delete quiet="true" dir="spells/eclipse/target"/>
    <delete quiet="true" dir="spells/example/target"/>
    <delete quiet="true" dir="spells/publish/target"/>
    <delete quiet="true" dir="spells/upload/target"/>
  </target>

</project>
