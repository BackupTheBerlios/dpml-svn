<index key="dpml-magic">

  <import uri="${dpml.transit.uri}"/>

  <!--
  Magic Module
  -->

  <project file="module.xml">
    <info>
      <group>dpml/magic</group>
      <name>dpml-magic</name>
      <types>
        <type name="module" alias=""/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit"/>
    </dependencies>
  </project>

  <!--
  Magic and associated spells.
  -->

  <project basedir="core">
    <info>
      <group>dpml/magic</group>
      <name>dpml-magic-core</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-transit-tools"/>
      <include key="ant-junit"/>
    </dependencies>
  </project>

  <project basedir="spells/publish">
    <info>
      <group>dpml/magic</group>
      <name>dpml-magic-publish</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-magic-core"/>
    </dependencies>
  </project>

  <project basedir="spells/eclipse">
    <info>
      <group>dpml/magic</group>
      <name>dpml-magic-eclipse</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-magic-core"/>
    </dependencies>
  </project>

  <project basedir="spells/doc">
    <info>
      <group>dpml/magic</group>
      <name>dpml-magic-doc</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-magic-core"/>
    </dependencies>
  </project>

  <project basedir="spells/checkstyle">
    <info>
      <group>dpml/magic</group>
      <name>dpml-magic-checkstyle</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-magic-core"/>
      <include key="checkstyle"/>
    </dependencies>
  </project>

  <project basedir="spells/upload">
    <info>
      <group>dpml/magic</group>
      <name>dpml-magic-upload</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-magic-core"/>
      <include key="ant-jsch"/>
      <include key="jsch" runtime="true" build="false" test="false" />
    </dependencies>
  </project>

  <project basedir="spells/example">
    <info>
      <group>dpml/test</group>
      <name>dpml-magic-example</name>
      <types>
        <type name="jar"/>
        <type name="plugin"/>
      </types>
    </info>
    <dependencies>
      <include key="dpml-magic-core"/>
    </dependencies>
  </project>

  <resource>
    <info>
      <group>checkstyle</group>
      <name>checkstyle</name>
      <version>3.5</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="antlr" />
      <include key="bcel" />
      <include key="commons-beanutils-core" />
      <include key="commons-collections" />
      <include key="commons-logging" />
      <include key="regexp" />
    </dependencies>
  </resource>

  <resource>
    <info>
      <group>antlr</group>
      <name>antlr</name>
      <version>2.7.2</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="ant" />
    </dependencies>
  </resource>

  <resource>
    <info>
      <group>bcel</group>
      <name>bcel</name>
      <version>5.1</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>

  <resource>
    <info>
      <group>commons-beanutils</group>
      <name>commons-beanutils-core</name>
      <version>1.7.0</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>

  <resource>
    <info>
      <group>commons-collections</group>
      <name>commons-collections</name>
      <version>3.1</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>

  <resource>
    <info>
      <group>commons-logging</group>
      <name>commons-logging</name>
      <version>1.0.4</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>

  <resource>
    <info>
      <group>regexp</group>
      <name>regexp</name>
      <version>1.3</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
  </resource>

  <resource>
    <info>
      <group>ant</group>
      <name>ant-jsch</name>
      <version>1.6.5</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="ant" />
    </dependencies>
  </resource>

  <resource>
    <info>
      <group>jsch</group>
      <name>jsch</name>
      <version>0.1.17</version>
      <types>
        <type name="jar"/>
      </types>
    </info>
    <dependencies>
      <include key="ant" />
    </dependencies>
  </resource>

</index>
